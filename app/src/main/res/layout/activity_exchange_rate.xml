<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_exchange_rate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.francis.cryptocompare.main.ExchangeRateActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/display_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/activity_vertical_margin"
            android:textAppearance="?android:textAppearanceSmall"
            tools:text="233322.34" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/crypto_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exchange_rate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/delete_margin"
                    android:textSize="20sp"
                    tools:text="15533535.00" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/delete_margin"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/enter_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/delete_margin"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:hint="@string/hint_text"
            android:inputType="number"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/calc_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/delete_margin"
            android:layout_marginRight="@dimen/delete_margin"
            android:background="@drawable/circle"
            android:contentDescription="@null"
            android:elevation="4dp"
            android:src="@drawable/ic_send"
            tools:targetApi="LOLLIPOP" />
    </LinearLayout>

</LinearLayout>
